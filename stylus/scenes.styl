#viewport {
  position: absolute
  left: 50%
  width: 960px
  height: 720px
  
  margin-left: -(960px / 2)
  
  overflow: hidden
  user-select: none
  transform-origin: 50% 0;
}

#loading {
  width: 100%
  color: white
  text-align: center
}

.scene {
  position: absolute
  width: 100%
  height: 100%
  
  background-color: #222
  background-repeat: no-repeat
  
  transition: 1200ms ease-in-out 0ms
  
  &.scalerotate {
    transform: rotate(360deg) scale(0.0);
  }
}

#war-1, #war-2, #intro {
  background-image: url("../assets/images/desert.png")
}

#war-2 {
  background-position: -960px 0px
}

#church, #gameover, #outro {
  background-image: url("../assets/images/grass.png")
}

#temple-1, #temple-2 {
  background: url("../assets/images/temple.png")
}

#temple-1 {
  background-position: 0px -720px
}


#family {
  background: url("../assets/images/house.png")
}

#intro, #outro {
  #message0 {
    bottom: 150px
    right: 200px
  }
  
  #message1 {
    bottom: 100px
    right: 77px
  }
  
  #message2 {
    bottom: 50px
    right: 8px
  }
  
  #message3 {
    left: 50%
    top: 320px
    margin-left: -200px
    
    a {
      color: yellow
    }
  }
}

.message {
  position: absolute
  width: 400px
  text-align: center
  background-color: #332A69
  font-weight: bold
  padding: 8px
  border-radius: 4px
  border: 1px solid #ccc
  box-shadow: 0px 0px 8px #444
  color: white
}

.continue {
  left: 50%;
  margin-left: -200px
  background-color: white
  color: black
  cursor: pointer
  top: 400px
  transition: 300ms ease-in-out 0ms
  
  &:hover {
    background-color: yellow
  }
}
