.tile {
  display: block
  width: 80px
  height: 80px
  position: absolute
  background-repeat: no-repeat
  
  &.npc {
    background-image:url("../assets/images/npc.png")    
  }
  
  &.knight {
    &.right {
      background-position: -160px -0px      
    }
      
    &.left {
      background-position: -320px -0px
    }
    
    &.old {
      background-position: -240px -0px
    }
  }
  
  &.brother {
    background-position: -0px -0px
  }
  
  &.child {
    background-position: -80px -0px
  }  
  
  &.wife {
    background-position: -400px -0px
  }
  
  &.items {
    background-image:url("../assets/images/items.png")
    
    &.grave1 {background-position: -160px -160px}
    &.grave2 {background-position: -160px -80px}
    &.road {background-position: -80px -160px}
    &.ruin1 {background-position: -80px -80px}
    &.ruin2 {background-position: -160px -0px}
    &.ruin3 {background-position: -80px -0px}
    &.sign {background-position: -0px -160px}
    &.socket {
      background-position: -0px -80px
    
      &.tablecloth {
        background-position: -0px -0px
      }  
    }
  }
  
}
      
  